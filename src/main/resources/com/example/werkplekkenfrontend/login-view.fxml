<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="main_container" alignment="TOP_CENTER" minHeight="422.0" minWidth="1080" prefHeight="422.0" prefWidth="1080.0" spacing="20.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.werkplekkenfrontend.controllers.LoginViewController">
    <padding>
        <Insets top="100"/>
    </padding>

    <HBox alignment="CENTER" spacing="50">
        <HBox>
            <TextArea fx:id="email" prefHeight="50" prefWidth="200" text="Email Address" />
            <TextArea fx:id="password" prefHeight="50" prefWidth="200" text="Password" />
        </HBox>
    </HBox>

    <TextArea fx:id="forgotPassword" maxWidth="200" prefHeight="50" text="Forgot Password" />

    <Button maxWidth="400" onAction="#onSignInClick" prefHeight="74.0" prefWidth="511.0" text="Sign In" />
</VBox>
