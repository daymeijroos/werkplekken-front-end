<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.werkplekkenfrontend.views.LoginView"
      prefHeight="400.0" prefWidth="600.0">
    <padding>
        <Insets bottom="80.0" left="80.0" right="80.0" top="40.0"/>
    </padding>
    <Label>Email:</Label>
    <TextField fx:id="eMailInput" promptText="Bijvoorbeeld: jan_broeder@casema.nl..." maxHeight="20"/>
    <Label>Wachtwoord:</Label>
    <PasswordField fx:id="passwordInput" promptText="Wij houden onder ons..." maxHeight="20"/>
    <Button onAction="#login" text="Login"/>
    <Button onAction="#showRegisterView" text="Geen account? Maak er een!"/>
</VBox>
