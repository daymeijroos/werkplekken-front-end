<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<VBox fx:id="main_container" minWidth="1080" minHeight="1080" alignment="TOP_CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.werkplekkenfrontend.controllers.AdminFloorsViewController">
    <padding>
        <Insets top="20.0"/>
    </padding>
    <Label text="Floors" style="-fx-font-size: 30; -fx-border-color: black; -fx-padding: 5" prefWidth="600" alignment="CENTER"/>
    <HBox prefWidth="1080" prefHeight="100" alignment="CENTER" spacing="200" xmlns:fx="http://javafx.com/fxml">
        <Button text="Return to Buildings" onAction="#onReturnClick" cancelButton="true" prefHeight="50" prefWidth="200"/>
        <Button text="+" onAction="#onAddFloorClick" defaultButton="true" prefHeight="80" prefWidth="80"/>
    </HBox>
    <Label prefWidth="800" prefHeight="10" style="-fx-background-color: #0555ff"/>
    <VBox fx:id="floors_container" alignment="CENTER" spacing="50"/>
</VBox>
